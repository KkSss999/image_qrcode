{
  "manifest_version": 3,
  "name": "QR Code Reader",
  "version": "1.0.0",
  "description": "Right-click on images to scan QR codes",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*"],
      "js": ["lib/jsQR.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QR Code Reader"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/jsQR.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
